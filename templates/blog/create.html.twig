{% extends 'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

   <center><h1>Cr√©ation d'un article!</h1></center>
    <div class="container"><hr>
        <div class="row">
            <div class="col-md-2"></div>
                <div class="col-md-8">
                    {{ form_start(formArticle)}}

                        {{ form_row(formArticle.title, {'attr': {'placeholder': "Tire de l'article" }})}}
                        
                        {{ form_row(formArticle.category) }}

                        {{ form_row(formArticle.image, {'attr': {'placeholder': "L'url de l'image" }})}}

                        {{ form_row(formArticle.content, {'attr': {'placeholder': "Contenu de l'article" }})}}
                        
                            <button type="submit" class="btn btn-success">
                                {% if editMode %}
                                    Enregistrer les modifications
                                {% else %}
                                    Ajouter l'article
                                {% endif %}   
                            </button>
                        {{ form_end(formArticle)}}
                </div>
            <div class="col-md-2"></div>
        </div>
    </div>

{% endblock %}