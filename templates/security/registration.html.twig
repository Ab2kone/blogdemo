{% extends 'base.html.twig' %}

{% block body %}
   <center><h1>Inscription</h1></center>
    <div class="container"><hr>
        <div class="row">
            <div class="col-md-2"></div>
                <div class="col-md-8">
                    {{ form_start(form)}}

                        {{ form_row(form.username, {'label':'Nom d\utilisateur','attr': {'placeholder': "Nom d'utilisateur..." }})}}
                        
                        {{ form_row(form.email, {'label':'Email','attr': {'placeholder': "Adresse email..." }}) }}

                        {{ form_row(form.password, {'label':'Mot de passe','attr': {'placeholder': "Mot de passe" }})}}

                        {{ form_row(form.confirm_password, {'label':'Confirm mot de passe','attr': {'placeholder': "Répétez votre mot de passe" }})}}
                        
                            <button type="submit" class="btn btn-success">
                               S'inscrire
                            </button>
                        {{ form_end(form)}}
                </div>
            <div class="col-md-2"></div>
        </div>
    </div>


{% endblock %}